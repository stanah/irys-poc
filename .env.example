# ===== Client Environment Variables (NEXT_PUBLIC_) =====
# Validated by Zod schema at startup. Missing required vars will cause startup error.

# Required
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# AA Authentication (Privy + Pimlico)
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id
NEXT_PUBLIC_PIMLICO_API_KEY=your_pimlico_api_key

# Optional
NEXT_PUBLIC_ALCHEMY_GAS_POLICY_ID=optional_gas_policy_id
NEXT_PUBLIC_LIVEPEER_API_KEY=your_livepeer_api_key
NEXT_PUBLIC_TIPPING_CONTRACT=0x_deployed_contract_address
NEXT_PUBLIC_PLATFORM_ADDRESS=0x_platform_wallet_address
NEXT_PUBLIC_PLATFORM_FEE_PERCENT=10
NEXT_PUBLIC_IRYS_GRAPHQL_ENDPOINT=https://uploader.irys.xyz/graphql

# ===== Server-Only Environment Variables =====
# Not exposed to client. Only validated on server.

LIVEPEER_WEBHOOK_SECRET=your_livepeer_webhook_secret

# ===== Foundry Deployment (not validated by app) =====

PRIVATE_KEY=your_deployer_private_key
POLYGON_AMOY_RPC=https://polygon-amoy.g.alchemy.com/v2/your_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
